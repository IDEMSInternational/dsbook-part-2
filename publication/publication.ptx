  </html>
  
  <!-- PDF/LaTeX-specific options -->
  <latex print="no" sides="two"/>
  
  <!-- Common options -->
  <common>
    <exercise-divisional hint="yes" answer="no" solution="no"/>
  </common>
</publication>
